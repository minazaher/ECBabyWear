<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:layout_marginHorizontal="24dp"
    android:layout_marginTop="30dp"
    android:elevation="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/img_cart"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kid_model" />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:paddingStart="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_cart_itemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Spring Dress"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_cart_itemDes"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:scaleX="1.01"
                        android:text="long sleeve, for kids"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="$"
                            android:textColor="@color/pink_300"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_cart_itemPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="150.0"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_plus_cart"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/white_rounded_button"
                            android:elevation="20dp"
                            android:text="+"
                            android:textColor="@color/pink_300"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppinslight"
                            android:textAlignment="center"
                            android:padding="1dp"
                            app:tint="@color/cardview_dark_background" />


                        <TextView
                            android:id="@+id/cart_item_quantity"
                            android:layout_width="20dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:layout_marginHorizontal="8dp"
                            android:text="1"
                            android:textSize="18sp"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_minus_cart"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:backgroundTint="@color/pink_300"
                            android:background="@drawable/rounded_button"
                            android:elevation="20dp"
                            android:text="-"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppinslight"
                            android:textAlignment="center"
                            android:padding="1dp"
                            app:tint="@color/white" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>